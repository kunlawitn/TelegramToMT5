{
  "compilerOptions": {
    /* ================= BASIC ================= */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",

    /* ================= NEXT / TS ================= */
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,

    /* ================= STRICT ================= */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ================= INTEROP ================= */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* ================= PATH ALIAS ================= */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* ================= TYPES ================= */
    "types": ["node"]
  },

  /* ================= INCLUDE / EXCLUDE ================= */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
